<div id="this-carousel-id" class="carousel slide"><!-- class of slide for animation -->
  <div class="carousel-inner">

    <div class="item active"><!-- class of active since it's the first item -->
      <%= image_tag("umbrellas1200x480.jpg", alt: "Umbrellas") %>
    </div>

    <div class="item">
      <%= image_tag("kungfu1200x480.jpg", alt: "Kungfu") %>
    </div>

    <div class="item">
      <%= image_tag("bokeh1200x480.jpg", alt: "Bokeh") %>
    </div>

  </div><!-- /.carousel-inner -->
  <!--  Next and Previous controls below
        href values must reference the id for this carousel -->
    <a class="carousel-control left" href="#this-carousel-id" data-slide="prev">&lsaquo;</a>
    <a class="carousel-control right" href="#this-carousel-id" data-slide="next">&rsaquo;</a>
</div><!-- /.carousel -->





<h1>Blog Posts</h1>


<div class="row">

    <% @blog_posts.each do |blog_post| %>

    <div class="col-md-6">

      <div class="panel panel-info">

        <div class="panel-heading">
            <h4><strong><%= blog_post.title %></strong></h4>
        </div>

        <div class="panel-body">
            by <%= link_to blog_post.user.username, user_posts_path(id: blog_post.user.id) %><br>

            <p><%= blog_post.blog_entry[0..250] %>...</P><%= link_to "READ MORE", blog_post %>
        </div>

      <% if current_user.id == blog_post.user.id %>
        <div class="panel-footer panel-info">
            <%= link_to 'Edit', edit_blog_post_path(blog_post), class: "btn btn-info" %>
            <%= link_to 'Delete', blog_post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </div>
      <% end %>

        </div>

    </div>

    <% end %>

</div>



