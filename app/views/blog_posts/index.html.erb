<p id="notice"><%= notice %></p>

<h1>Blog Posts</h1>


<div class="row">

    <% @blog_posts.each do |blog_post| %>

    <div class="col-md-6">

      <div class="panel panel-info">

        <div class="panel-heading">
            <h4><strong><%= blog_post.title %></strong></h4>
        </div>

        <div class="panel-body">
            by <%= blog_post.author %><br>
            <p><%= blog_post.blog_entry[0..250] %>...</P><%= link_to "READ MORE", blog_post %>
        </div>

        <div class="panel-footer panel-info">
            <%= link_to 'Edit', edit_blog_post_path(blog_post), class: "btn btn-info" %>
            <%= link_to 'Delete', blog_post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </div>

        </div>

    </div>

    <% end %>

</div>


<br>

<%= link_to 'New Post', new_blog_post_path, class: "btn btn-info" %>
